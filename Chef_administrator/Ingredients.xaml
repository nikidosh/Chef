<Window x:Class="Chef_administrator.Ingredients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chef_administrator"
        mc:Ignorable="d"
        Title="Ingredients" Height="720" Width="1080" Loaded="Window_Loaded">
    <Grid Margin="0,0,664.6,0.4">
        <Button Content="Удалить"   FontSize="15" Click="deleteButton_Click" Background="Green" Margin="622,50,-308,589" Height="Auto" RenderTransformOrigin="0.5,0.5"/>

        <DataGrid AutoGenerateColumns="False" x:Name="goodsGrid" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="200"/>
                <DataGridTextColumn Binding="{Binding Count}" Header="Кол" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Обновить"  FontSize="15" Click="updateButton_Click" Background="Green" Margin="444,50,-164,589" Height="Auto"/>

    </Grid>
</Window>
