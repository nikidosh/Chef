<Window x:Class="Chef_administrator.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:p = "clr-namespace:Chef_administrator.Properties"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chef_administrator"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid Background="White" >


        <StackPanel Margin="0,0,-0.4,0">
            <TextBlock Text="{x:Static p:Resources.Menu}" FontSize="40" TextAlignment="Center" FontWeight="Bold" TextDecorations="{x:Null}"  />
            <Button Content="{x:Static p:Resources.Dishes}" Margin=" 100  0 100 15" Background="Green" Click="Button_Click"/>
            <Button Content="{x:Static p:Resources.Ingredients}" Margin=" 100  20 100 15"  Background="Green" Click="Button_Click1" Cursor="Hand"/>
            <Button Content="{x:Static p:Resources.Category}" Margin=" 100  20 100 15"  Background="Green" Click="Button_Click2" Cursor="Hand"/>
            <Button Content="{x:Static p:Resources.Reference}" Margin=" 100  20 100 15"  Background="Green" Cursor="Hand" Click="Button_Click_1"/>


        </StackPanel>


    </Grid>
</Window>
