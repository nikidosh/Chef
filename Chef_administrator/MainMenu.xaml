<Window x:Class="Chef_administrator.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chef_administrator"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid Background="White" >


        <StackPanel Margin="0,0,-0.4,0">

            <TextBlock Text="Меню" FontSize="40" TextAlignment="Center" FontWeight="Bold" Margin="0 100 0 50" TextDecorations="{x:Null}"  />
            <Button Content="Блюда" Margin=" 100  0 100 15" Background="Green" Click="Button_Click"/>
            <Button Content="Ингридиенты" Margin=" 100  20 100 15"  Background="Green" Click="Button_Click1"/>
        </StackPanel>


    </Grid>
</Window>
