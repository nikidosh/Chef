<Window x:Class="Chef_administrator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chef_administrator"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="720" Width="1080">
    <Grid Background="White" >

       
            <StackPanel Height="726" Margin="0,0,-0.4,0">
               
                <TextBlock Text="Авторизация" FontSize="40" TextAlignment="Center" FontWeight="Bold" Margin="0 100 0 100" TextDecorations="{x:Null}"  />

                <TextBox x:Name="textBoxLogin" FontSize="16" Margin="100 0 100 0" materialDesign:HintAssist.Hint="Введите логин" />
                <PasswordBox x:Name="passBox" FontSize="16" Margin="100 0 100 0" materialDesign:HintAssist.Hint="Введите пароль"  />
                <Button Content="Войти" Margin=" 100  40 100 15" Click="Button_Click" Background="Green"/>
            </StackPanel>
 

    </Grid>
</Window>
